<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
  <bean id="catalogService"
      class="com.uciext.springfw.hw.catalog.service.impl.CatalogServiceImpl">
      <property name="catalog" ref="catalog" />
      <property name="product" ref="product2" />
  </bean>

  <bean id="catalog"
      class="com.uciext.springfw.hw.catalog.model.Catalog">
      <property name="catalogName" value="Jav Books" />       
      <property name="lastUpdateDate" value="06/05/2014" />       
  </bean>

<!-- this one  should use default constructor -->
  <bean id="product2"
      class="com.uciext.springfw.hw.catalog.model.Product">
      <property name="SKU" value="4444" />       
      <property name="productName" value="jit" />       
      <property name="unitOfMeasure" value="metric" />       
      <property name="price" value= "8.8" />       
      <property name="availableQuantity" value="9" />       

  </bean>


  <!-- Product -->
  <bean id="product"
      class="com.uciext.springfw.hw.catalog.model.Product">
      <constructor-arg type="java.lang.String" value="SKU" />
      <constructor-arg type="java.lang.String" value="P2" />
      <constructor-arg type="java.lang.String" value="P3" />
      <constructor-arg type="java.lang.Double" value="1.01" />
      <constructor-arg type="java.lang.Integer" value="1" />

      <!--
      <constructor-arg ref="product" />
      <property name="SKU" value="4444" />       
      <property name="productName" value="root beer" />       
      <property name="unitOfMeasure" value="US Standard" />       
  -->

  </bean>

  
  
</beans>
